<div class="container">
    <form action="/appoint" method="POST">

        <label for="p_name">Patient Name</label>
        <input required type="text" id="p_name" name="p_name" placeholder="Your name..">

        <div class="col-sm-6 col-md-6 col-lg-3">
            <div class="form-group">
                <label>Department</label>

                <select class="" name="department">
                    <option value="Dentists">Dentists</option>
                    <option value="Neurology">Neurology</option>
                    <option value="Opthalmology">Opthalmology</option>
                    <option value="Orthopedics">Orthopedics</option>
                    <option value="Cancer Departmen">Cancer Department</option>
                    <option value="ENT Departmen">ENT Department</option>
                </select>


            </div>
        </div>

            <div class="col-sm-6 col-md-6 col-lg-3">
                <div class="form-group">
                    <label>Doctor</label>

                    <select class="" name="doctor_name">
                        <% for (var i=0; i < doc.length; i++){ %>
                            <option name="<%= doc[i].first_name%>">
                                <%= doc[i].first_name+" " +doc[i].last_name%></option>
                        <% } %>
                    </select>
                
               
                </div>
            </div>

            <div class=" col-sm-6 col-md-6 col-lg-3">
                <div class="form-group">
                    <label>Date</label>
                    <div class="cal-icon">
                        <input style="width:1480px" required class="form-control" type="date" name="date">
                    </div>
                </div>
            </div>



            <label>Time</label>
            <div class="time-icon">
                <input style="width:1480px" required class="form-control" type="time" name="time">
            </div>

            <label for="subject">Email</label>
            <div class="cal-icon">
                <input style="width:1480px" required class="form-control" type="email" name="email">
            </div>

            <label for="subject">Phone number</label>
            <div class="cal-icon">
                <input style="width:1480px" required class="form-control" type="number" name="phone">
            </div>
            <input required type="submit" value="Submit">

    </form>
    <script src="/assets/js/jquery-3.2.1.min.js"></script>
    <script src="/assets/js/popper.min.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>
    <script src="/assets/js/jquery.slimscroll.js"></script>
    <script src="/assets/js/select2.min.js"></script>
    <script src="/assets/js/moment.min.js"></script>
    <script src="/assets/js/bootstrap-datetimepicker.min.js"></script>
    <script src="/assets/js/app.js"></script>
    <script>
        $(function () {
            $('#datetimepicker3').datetimepicker({
                format: 'LT'

            });
        });
    </script>
</div>

<style>
    /* Style inputs with type="text", select elements and textareas */
    input[type=text],
    select,
    textarea {
        width: 100%;
        /* Full width */
        padding: 12px;
        /* Some padding */
        border: 1px solid #ccc;
        /* Gray border */
        border-radius: 4px;
        /* Rounded borders */
        box-sizing: border-box;
        /* Make sure that padding and width stays in place */
        margin-top: 6px;
        /* Add a top margin */
        margin-bottom: 16px;
        /* Bottom margin */
        resize: vertical
            /* Allow the user to vertically resize the textarea (not horizontally) */
    }

    /* Style the submit button with a specific background color etc */
    input[type=submit] {
        background-color: #4CAF50;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }


    /* When moving the mouse over the submit button, add a darker green color */
    input[type=submit]:hover {
        background-color: #45a049;
    }

    /* Add a background color and some padding around the form */
    .container {
        border-radius: 5px;
        background-color: #f2f2f2;
        padding: 20px;
    }
</style>